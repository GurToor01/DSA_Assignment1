// Find the Transpose of a Matrix 

#include<iostream>
using namespace std;

int main(){
    int m,n;
    
    cout<<"Enter number of rows and columns in the array : ";
    cin>>m>>n;
    int arr[m][n];

    cout<<"Enter elements in the array :";
    for(int i=0; i<m; i++){
        for(int j=0; j<n; j++){
            cin>>arr[i][j];
        }
    }

    int transpose[n][m];

    for(int i=0; i<m; i++){
        for(int j=0; j<n; j++){
            transpose[j][i]=arr[i][j];
        }
    }

    cout<<"Transpose of the given array is : "<<endl;
    for(int i=0; i<n; i++){
        for(int j=0; j<m; j++){
            cout<<transpose[i][j]<<" ";
        }
        cout<<endl;
    }
    return 0;
}
